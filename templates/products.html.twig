    {% else %}
        {% set fromweightvalue = '' %}
    {% endif %}

    {% if query.toWeight is defined and query.toWeight is not null %}
        {% set toweightvalue = 'value=' ~ query.toWeight %}
    {% else %}
        {% set toweightvalue = '' %}
    {% endif %}


